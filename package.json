{
  "name": "v-perfect-signature",
  "type": "module",
  "version": "1.3.0",
  "description": "Perfect pressure-sensitive signature drawing for Vue 2 and 3",
  "keywords": [
    "vue",
    "signature",
    "pad",
    "freehand"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wobsoriano/v-perfect-signature.git"
  },
  "files": [
    "dist",
    "nuxt.mjs"
  ],
  "exports": {
    ".": {
      "types": {
        "import": "./dist/index.d.ts",
        "require": "./dist/index.d.cts"
      },
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "unpkg": "dist/index.global.js",
  "jsdelivr": "dist/index.global.js",
  "types": "./dist/index.d.ts",
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*"
      ]
    }
  },
  "scripts": {
    "dev": "tsup --watch --onSuccess \"pnpm --filter playground dev\"",
    "build": "tsup",
    "prepublishOnly": "pnpm run build",
    "test": "vitest run",
    "release": "bumpp && pnpm publish"
  },
  "peerDependencies": {
    "@vue/composition-api": "^1.7.1",
    "vue": "^2.6.14 || ^3.2.0"
  },
  "peerDependenciesMeta": {
    "@vue/composition-api": {
      "optional": true
    }
  },
  "dependencies": {
    "perfect-freehand": "^1.2.0",
    "vue-demi": "^0.14.6"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.43.1",
    "@vue/test-utils": "2.4.1",
    "bumpp": "^9.2.0",
    "canvas": "^2.11.2",
    "eslint": "^8.50.0",
    "jsdom": "^22.1.0",
    "tslib": "^2.6.2",
    "tsup": "^8.0.1",
    "typescript": "^5.2.2",
    "vitest": "^0.34.5",
    "vitest-canvas-mock": "^0.3.3",
    "vue": "^3.3.4"
  },
  "homepage": "https://github.com/wobsoriano/v-perfect-signature#readme"
}
