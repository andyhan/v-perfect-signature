{
  "name": "v-perfect-signature",
  "version": "1.2.1",
  "description": "Perfect pressure-sensitive signature drawing for Vue 2 and 3",
  "keywords": [
    "vue",
    "signature",
    "pad",
    "freehand"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wobsoriano/v-perfect-signature.git"
  },
  "files": [
    "dist",
    "nuxt.mjs"
  ],
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "scripts": {
    "dev": "tsup --watch --onSuccess \"pnpm --filter playground dev\"",
    "build": "tsup",
    "prepublishOnly": "pnpm run build",
    "test": "vitest run",
    "release": "bumpp && pnpm publish"
  },
  "peerDependencies": {
    "@vue/composition-api": "^1.7.1",
    "vue": "^2.6.14 || ^3.2.0"
  },
  "peerDependenciesMeta": {
    "@vue/composition-api": {
      "optional": true
    }
  },
  "dependencies": {
    "perfect-freehand": "^1.2.0",
    "vue-demi": "^0.14.5"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.39.6",
    "@vue/test-utils": "2.4.0",
    "bumpp": "^9.1.1",
    "canvas": "^2.11.2",
    "eslint": "^8.43.0",
    "jsdom": "^22.1.0",
    "tslib": "^2.6.0",
    "tsup": "^7.1.0",
    "typescript": "^5.1.6",
    "vitest": "^0.32.2",
    "vitest-canvas-mock": "^0.3.2",
    "vue": "^3.3.4"
  },
  "homepage": "https://github.com/wobsoriano/v-perfect-signature#readme"
}
