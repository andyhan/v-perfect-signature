{
  "name": "v-perfect-signature",
  "version": "1.1.10",
  "description": "Perfect pressure-sensitive signature drawing for Vue 2 and 3",
  "keywords": [
    "vue",
    "signature",
    "pad",
    "freehand"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wobsoriano/v-perfect-signature.git"
  },
  "files": [
    "dist",
    "nuxt.mjs"
  ],
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "scripts": {
    "dev": "concurrently \"pnpm build --watch\" \"pnpm --filter playground dev\"",
    "build": "tsup",
    "prepublishOnly": "pnpm run build",
    "test": "vitest run",
    "release": "bumpp && pnpm publish"
  },
  "peerDependencies": {
    "@vue/composition-api": "^1.7.1",
    "vue": "^2.6.14 || ^3.2.0"
  },
  "peerDependenciesMeta": {
    "@vue/composition-api": {
      "optional": true
    }
  },
  "dependencies": {
    "perfect-freehand": "^1.2.0",
    "vue-demi": "^0.13.11"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.33.1",
    "@vue/test-utils": "2.2.5",
    "bumpp": "^8.2.1",
    "concurrently": "^7.6.0",
    "eslint": "^8.10.0",
    "jsdom": "^20.0.3",
    "tslib": "^2.4.1",
    "tsup": "^6.5.0",
    "typescript": "^4.6.2",
    "v-perfect-signature": "workspace:*",
    "vitest": "^0.25.3",
    "vitest-canvas-mock": "^0.2.2",
    "vue": "^3.2.45"
  },
  "homepage": "https://github.com/wobsoriano/v-perfect-signature#readme"
}
