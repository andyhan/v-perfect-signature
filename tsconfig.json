{
    "compilerOptions": {
      "target": "es2018",
      "lib": ["esnext", "DOM"],
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "strict": true,
      "strictNullChecks": true,
      "skipDefaultLibCheck": true,
      "skipLibCheck": true,
      "baseUrl": "."
    },
    "include": [
      "src/**/*.ts",
      "src/**/*.vue",
      "shims-vue.d.ts",
    ],
    "exclude": [
      "node_modules"
    ]
}
